
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">

    <script>addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }</script>

    <link href="~/Blog/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="~/Blog/css/single.css">
    <link href="~/Blog/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Blog/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">
</head>

<body>
    <!-- Header -->
    <header>
        @await Html.PartialAsync("PartialHeader")

        @await Html.PartialAsync("PartialNavbar")
    </header>
    <!-- /Header -->

    <!-- Main -->
    @RenderBody()
    <!-- /Main -->

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                @await Html.PartialAsync("PartialAbout")

                @await Component.InvokeAsync("LastBlogsList")
                
                <!-- subscribe -->
                <div class="col-lg-4 subscribe-main footer-grid-agileits-w3ls text-left">
                    <h2>Haber bültenimize kaydolun</h2>
                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                    <!-- //subscribe -->
                </div>
            </div>
            <!-- footer -->
            <div class="footer-cpy text-center">
                <div class="footer-social">
                    <div class="copyrighttop">
                        <ul>
                            <li class="mx-3">
                                <a class="facebook" href="#">
                                    <i class="fab fa-facebook-f"></i>
                                    <span>Facebook</span>
                                </a>
                            </li>
                            <li>
                                <a class="facebook" href="#">
                                    <i class="fab fa-twitter"></i>
                                    <span>Twitter</span>
                                </a>
                            </li>
                            <li class="mx-3">
                                <a class="facebook" href="#">
                                    <i class="fab fa-google-plus-g"></i>
                                    <span>Google+</span>
                                </a>
                            </li>
                            <li>
                                <a class="facebook" href="#">
                                    <i class="fab fa-pinterest-p"></i>
                                    <span>Pinterest</span>
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
                <div class="w3layouts-agile-copyrightbottom">
                    <p>
                        © @DateTime.Now.Year Weblog. Tüm Hakları Saklıdır | Design by
                        <a href="http://w3layouts.com/">W3layouts</a>
                    </p>

                </div>
            </div>

            <!-- /Footer -->
        </div>
    </footer>
    <!---->
    <!-- js -->
    <script src="~/Blog/js/jquery-2.2.3.min.js"></script>
    <!-- //js -->
    <!--/ start-smoth-scrolling -->
    <script src="~/Blog/js/move-top.js"></script>
    <script src="~/Blog/js/easing.js"></script>
    <script>jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });</script>
    <!--// end-smoth-scrolling -->

    <script>$(document).ready(function () {
            /*
                                    var defaults = {
                                            containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear'
                                        };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });</script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    <!-- //Custom-JavaScript-File-Links -->
    <script src="~/Blog/js/bootstrap.js"></script>


</body>

</html>

@using Entity.Concrete
@model IEnumerable<Comment>


<div class="comment-top">
    <h4>Comments</h4>
    @if (Model.Count() == 0)
    {
        <h2>
            Bu Gönderiye Henüz Yorum Yapılmadı. İlk Yorumu Siz Yapmak İster Misiniz?
        </h2>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media mb-2">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcReVr1dV8uDJFwnkByDU6xSMeqaM6yqdg1pWejuRuE&s" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
</div>
@using Entity.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Blog Listem</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
        {
            <tr>
                <th>@item.BlogId</th>
                <td>@item.BlogTitle</td>
                <td>@item.BlogCreateDate</td>
                <td>@item.CategoryId</td>
                <td>@item.BlogStatus</td>
                <td><a href="#" class="btn btn-warning">Düzenle</a></td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
            </tr>
        }
</table>
<a href="#" class="btn btn-primary">Yeni Blog Ekle</a>

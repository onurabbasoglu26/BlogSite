
@using Entity.Concrete
@model IEnumerable<Blog>
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<body>
    <!-- Blog -->
    <div class="container mb-2 mt-3">
        <div class="row">
            <!--left-->

            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                @foreach (var item in Model)
                {
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a href="single.html">
                                    <img src="@item.BlogImage" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="blog-info-middle">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreateDate).ToString("dd.MMM.yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-thumbs-up"></i> 0 Beğeni
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0 Yorum
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>

                        <h3>
                            <a href="single.html">@item.BlogTitle</a>
                        </h3>
                        <p>
                            @item.BlogContent
                        </p>
                        <a href="single.html" class="btn btn-primary read-m">Read More</a>
                    </div>
                }

                @await Component.InvokeAsync("CommentListByBlog", new { id = ViewBag.id })

                <!-- await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml") -->

                @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")

            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    <h4>Haber bültenimize kaydolun</h4>
                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")

                    @await Component.InvokeAsync("CategoryList")

                    @await Component.InvokeAsync("WritersLastestBlog")

                    @await Component.InvokeAsync("LastBlog") 
                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
    <!--//main-->
</body>
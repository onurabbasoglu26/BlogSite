@using Entity.Concrete
@model Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Sweet Alert -->
<link href="~/AdminPanel/css/plugins/sweetalert/sweetalert.css" rel="stylesheet">

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">

            <div class="ibox-title">
                <h3>Kategori Ekleme Sayfası</h3>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>

            <div class="ibox-content">
                @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
                {
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Kategori Adı:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @type = "text" })
                            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "form-text m-b-none text-danger" })
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Kategori Açıklaması:</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control", @type = "text" })
                            @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "form-text m-b-none text-danger" })
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="~/Admin/Category/Index" class="btn btn-white btn-sm"> İptal </a>
                            <button class="btn btn-primary btn-sm btn-onay" type="submit"> Kategori Ekle </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Sweet alert -->
<script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="text/javascript">$('.btn-onay').on('click', function (e) {
        e.preventDefault();
        var form = $(this).closest('form');
        Swal.fire({
            title: 'Kategori eklemek istediğinizden emin misiniz?',
            text: "Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, ekle!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.value) {
                form.submit();
            }
        });
    });</script>
